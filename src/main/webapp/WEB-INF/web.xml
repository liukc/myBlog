        <servlet-name>InitServlet</servlet-name>
        <servlet-class>cn.forlkc.servlet.InitServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>cn.forlkc.servlet.RegisterServlet</servlet-class>
