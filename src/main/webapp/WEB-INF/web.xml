        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/cn.forlkc.servlet/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitServlet</servlet-name>
        <url-pattern>/cn.forlkc.servlet/InitServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/cn.forlkc.servlet/LoginServlet</url-pattern>
    </servlet-mapping>
